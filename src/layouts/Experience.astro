---
import MetaHead from "../components/MetaHead.astro";
import Header from "../components/Header.astro";
---

<html lang="en">
  <head>
    <MetaHead
      title="Jech | Portfolio"
      description="My name is Jech and I'm a Freelance Web Developer and designer from the Philippines"
    />
    <style lang="scss">
      @import "../styles/mixin.scss";
      .blur {
        filter: blur(5px) opacity(0);
        transform: translate(0, -10px);
        background-image: none;
      }
      body {
        filter: blur(0) opacity(1);
        transform: translate(0, 0);
        transition: filter 300ms;
      }
      .container-grid {
        display: grid;
        grid-template-areas:
          "header"
          "content";
        grid-template-columns: 1fr;
        grid-template-rows: 10vh calc(86vh - var(--p-medium));
        @include bp(960) {
          grid-template-rows: 6vh 50vh calc(43vh - var(--p-medium));
        }
        @include bp(1024) {
          grid-template-rows: 6vh 60vh calc(34vh - var(--p-medium));
        }
        @include bp(1440) {
          grid-template-rows: 6vh 64vh calc(30vh - var(--p-medium));
        }
      }
    </style>
  </head>
  <body class="blur">
    <div class="container-grid">
      <Header />
      <slot />
    </div>
  </body>
</html>
