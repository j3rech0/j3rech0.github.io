---
import MetaHead from "../components/MetaHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PortfolioDetails from "../components/PortfolioDetails.astro";
const MainEl = "main";
const MainClass = "main-container transition-fade";
const { title, imgSrcfull, link, description, responsibilities, builtwith } =
  Astro.props.frontmatter || Astro.props;
---

<html lang="en">
  <head>
    <MetaHead
      title="Jech | Portfolio"
      description="My name is Jech and I'm a Freelance Web Developer and designer from the Philippines"
    />
    <style is:inline>
      .container-grid {
        display: grid;
        height: calc(100vh - var(--m-medium) * 2);
        grid-template-areas:
          "header"
          "content"
          "footer";
      }
      @media (min-width: 1000px) {
        .container-grid {
          grid-template-rows: 9vh 1fr 6vh;
        }
      }

      @media (min-width: 1200px) {
        .main-container {
          margin-right: -2rem;
          margin-left: -2rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container-grid">
      <Header />
      <MainEl class={MainClass} id="swup">
        <PortfolioDetails
          {title}
          {imgSrcfull}
          {link}
          {description}
          {responsibilities}
          {builtwith}
        />
      </MainEl>
      <Footer />
    </div>
  </body>
</html>
