---
import MetaHead from "../components/MetaHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PortfolioDetails from "../components/PortfolioDetails.astro";
const MainEl = "main";
const MainClass = "main-container";
const { title, imgSrcfull, link, description, responsibilities, builtwith } =
  Astro.props.frontmatter || Astro.props;
---

<html lang="en">
  <head>
    <MetaHead
      title="Jech | Portfolio"
      description="My name is Jech and I'm a Freelance Web Developer and designer from the Philippines"
    />
    <style lang="scss">
      @import "../styles/mixin.scss";

      .anim.blur {
        filter: blur(5px) opacity(0);
        transform: translate(0, -10px);
      }
      .anim {
        filter: blur(0) opacity(1);
        transform: translate(0, 0);
        transition: transform 300ms, filter 300ms;
      }
      .container-grid {
        display: grid;
        height: calc(100vh - var(--m-medium) * 2);
        grid-template-areas:
          "header"
          "content"
          "footer";
        @include bp(1000) {
          grid-template-rows: 9vh 1fr 6vh;
          display: grid;
        }
      }

      .main-container {
        margin-inline: auto;
        margin-block: auto;
        @include bp(1200) {
          margin-right: -2rem;
          margin-left: -2rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container-grid blur anim">
      <Header />
      <MainEl class={MainClass}>
        <PortfolioDetails
          {title}
          {imgSrcfull}
          {link}
          {description}
          {responsibilities}
          {builtwith}
        />
      </MainEl>
      <Footer />
      <script defer>
        const animClass = document.querySelector(".anim");
        window.addEventListener("load", function () {
          if (animClass.classList.contains("blur"))
            animClass.classList.remove("blur");
        });
      </script>
    </div>
  </body>
</html>
