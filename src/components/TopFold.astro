---
import Intro from "../components/Intro.astro";
import Me from "./Me.astro";
---

<section class="top-fold">
  <Intro />
  <Me />
</section>

<style lang="scss">
  @import "../styles/mixin.scss";

  .top-fold {
    cursor: default;
    height: 75vh;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
    place-content: center;
    margin-inline: auto;
    max-width: 80vw;
    align-items: flex-start;
    column-gap: 50px;
    row-gap: 50px;
    @include bp(1024) {
      padding-bottom: rem(20);
      padding-inline: rem(30);
    }
    @include bp(1200) {
      max-width: rem(1200);
      // padding-top: rem(70);
    }
  }
</style>
