---
import Splash from "../layouts/Splash.astro";
import TopFold from "../components/TopFold.astro";
---

<Splash>
  <main class="main-container">
    <TopFold />
  </main>
</Splash>

<!-- Google Tag Manager (noscript) -->
<noscript
  ><iframe
    src="https://www.googletagmanager.com/ns.html?id=GTM-TV8NVWT"
    height="0"
    width="0"
    style="display:none;visibility:hidden"></iframe>
</noscript>
<!-- End Google Tag Manager (noscript) -->

<style lang="scss">
  @import "../styles/mixin.scss";
  .main-container {
    margin-inline: auto;
    margin-top: auto;
    @include bp(1024) {
      margin-right: -2rem;
      margin-left: -2rem;
      background: url("../assets/mountains.svg") no-repeat left bottom;
      background-size: 50%;
    }
    @include bp(1440) {
      background-size: rem(888);
    }
  }
</style>
